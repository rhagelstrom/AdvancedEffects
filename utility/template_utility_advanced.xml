<root>
	<template name='list_editor_advanced_effects'>
		<windowlist name='list'>
			<anchored>
				<top parent='columnanchor' anchor='bottom' relation='relative' offset='0' />
				<left />
				<right />
			</anchored>
			<child></child>
			<datasource>.effectlist</datasource>
			<class>advanced_effects_entry</class>
			<sortby>
				<control>effect_description</control>
			</sortby>
			<script file='utility/scripts/list_editor_advanced_effects.lua' />
		</windowlist>
	</template>

	<template name='advanced_effect_number'>
        <basicnumber>
            <default>0</default>
            <hideonvalue>0</hideonvalue>
        </basicnumber>
    </template>

	<!-- 5E hide the record version and replace with menubar button. See 5E menubar manager -->
	<template name='sub_record_version' merge='join'>
		<sub_content_framed_groupbox_bottom name='sub_version'>
			<script>
				function onInit()
					self.setVisible(false);
				end
			</script>
		</sub_content_framed_groupbox_bottom>
	</template>
</root>
