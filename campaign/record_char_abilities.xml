<root>
	<!-- Add Effect Features Section to Feature Details -->
	<windowclass name="referencefeat_main" merge="join">
		<sheetdata>
			<subwindow name="advanced_effects_contents">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="5" />
					<left offset="0" />
					<right offset="-2" />
				</anchored>
				<class>advanced_effects_subwindow</class>
				<activate />
			</subwindow>
		</sheetdata>
	</windowclass>

	<!-- Add Effect Features Section to Class Ability Details -->
	<windowclass name="referenceclassability_main" merge="join">
		<sheetdata>
			<subwindow name="advanced_effects_contents">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="5" />
					<left offset="0" />
					<right offset="-2" />
				</anchored>
				<class>advanced_effects_subwindow</class>
				<activate />
				<fastinit />
				<invisible />
			</subwindow>
		</sheetdata>
	</windowclass>

	<!-- Add Effect Features Section to Proficiency Details -->
	<windowclass name="referenceproficiency" merge="join">
		<sizelimits>
			<minimum height="450" />
		</sizelimits>
		<sheetdata>
			<sub_content_framed_groupbox name="content">
				<anchored>
					<bottom anchor="bottom" relation="relative" offset="-180"/>
				</anchored>
			</sub_content_framed_groupbox>
			<sub_content_framed_groupbox name="advanced_effects">
				<anchored>
					<top parent="content" anchor="bottom" offset="30"/>
					<bottom anchor="bottom" relation="relative" offset="-30"/>
				</anchored>
				<class>advanced_effects_subwindow</class>
			</sub_content_framed_groupbox>
		</sheetdata>
	</windowclass>

	<!-- Add Effect Features Section to Racial Trait Details -->
	<windowclass name="referenceracialtrait" merge="join">
		<sizelimits>
			<minimum height="450" />
		</sizelimits>
		<sheetdata>
			<sub_content_framed_groupbox name="content">
				<anchored>
					<bottom anchor="bottom" relation="relative" offset="-180"/>
				</anchored>
			</sub_content_framed_groupbox>
			<sub_content_framed_groupbox name="advanced_effects">
				<anchored>
					<top parent="content" anchor="bottom" offset="30"/>
					<bottom anchor="bottom" relation="relative" offset="-30"/>
				</anchored>
				<class>advanced_effects_subwindow</class>
			</sub_content_framed_groupbox>
		</sheetdata>
	</windowclass>
</root>